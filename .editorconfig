# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8

indent_style = space
indent_size = 2

quote_type = double

curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = false

[*.md]
indent_style = space
indent_size = 2
max_line_length = 80
